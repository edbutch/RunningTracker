<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/rootCard">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
        >

<!--todo change static-->


        <TextView
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/runLIstID"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginStart="16dp"
                android:textAlignment="viewStart" android:text="#"/>
        <TextView
                android:text="Distance Travelled"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/runListLength"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/runListStartDate"
                android:layout_marginStart="12dp" android:textAlignment="viewStart"/>
        <TextView
                android:text="Duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/runListDuration" app:layout_constraintStart_toEndOf="@+id/runListLength"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
                android:textAlignment="viewStart"/>
        <TextView
                android:text="Date of run        "
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:id="@+id/runListStartDate" app:layout_constraintStart_toEndOf="@+id/runLIstID"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.0" android:textAlignment="viewStart"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>


