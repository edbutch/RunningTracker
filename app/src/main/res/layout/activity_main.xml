<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.MainActivity">

    <ImageView
            android:layout_width="208dp"
            android:layout_height="208dp"
            android:id="@+id/imageView"
            app:srcCompat="@drawable/ic_map_large"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="332dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.421"
    />




    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:elevation="2dp"
                                        android:divider="@android:color/transparent"
                                        android:dividerHeight="0.0px"
                                        android:clipToPadding="false"
                                        android:clipChildren="false"
                                        card_view:cardElevation="4dp"
                                        card_view:cardPreventCornerOverlap="false"
                                        android:layout_marginBottom="8dp"
                                        android:id="@+id/buttons"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:cardBackgroundColor="@color/colorButtonCardStyle">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="303dp"
                tools:layout_editor_absoluteX="8dp">
            <Button
                    android:text="Start Tracker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_run"
                    android:id="@+id/btnStartTracker"
                    tools:layout_editor_absoluteY="68dp" tools:layout_editor_absoluteX="114dp"
                    android:backgroundTint="@color/colorButtonGradient1"
                    android:textColor="@color/colorButtonCardStyle"/>
            <Button
                    android:text="View your Runs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_runlist"
                    android:id="@+id/btnViewAllRuns"
                    tools:layout_editor_absoluteY="180dp" tools:layout_editor_absoluteX="112dp"
                    android:backgroundTint="@color/colorButtonGradient2"
                    android:textColor="@color/colorButtonCardStyle"/>
            <Button
                    android:text="Runs Overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_chart"
                    android:id="@+id/btnOverview"
                    tools:layout_editor_absoluteY="503dp" tools:layout_editor_absoluteX="112dp"
                    android:backgroundTint="@color/colorButtonGradient3"
                    android:textColor="@color/colorButtonCardStyle"/>
            <Button
                    android:text="View Runs as a boring old list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_thumb_down"
                    android:id="@+id/btnBoringList"
                    tools:layout_editor_absoluteY="503dp" tools:layout_editor_absoluteX="112dp"
                    android:backgroundTint="@color/colorButtonGradient4"
                    android:textColor="@color/colorIcon"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:elevation="2dp"
                                        android:divider="@android:color/transparent"
                                        android:dividerHeight="0.0px"
                                        android:clipToPadding="false"
                                        android:clipChildren="false"
                                        card_view:cardElevation="4dp"
                                        card_view:cardPreventCornerOverlap="false"
                                        android:layout_marginTop="8dp"
                                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toTopOf="@+id/buttons"
                                        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                        app:cardBackgroundColor="@color/colorButtonCardStyle">

        <TextView
                android:text="Utopia Tracker\nTrack your runs WITHOUT anyone seeing your data!\n The ONLY tracker that's 100% GDPR compliant!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/buttons" app:layout_constraintVertical_bias="0.333"
                android:textAlignment="center" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorPrimary"/>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>